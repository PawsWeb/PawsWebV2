<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Manage Users</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .admin-container {
            padding: 20px;
        }
        .admin-title {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
        }
        .user-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            padding: 10px;
        }
        .user-card {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            background-color: #f9f9f9;
        }
        .user-card h3 {
            margin: 10px 0;
            font-size: 18px;
        }
        .user-card p {
            font-size: 14px;
            margin: 5px 0;
        }
        .user-card button {
            background-color: #007bff;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 5px 0;
            width: 100%;
        }
        .user-card button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <header>
        <a href="/"><img src="/images/logo.png" alt="PawsWeb Logo" class="logo"></a>
        <nav class="nav-buttons">
            <a href="/"><button class="nav-button">HOME</button></a>
            <a href="/aboutus"><button class="nav-button">ABOUT US</button></a>
            <a href="/ourpets"><button class="nav-button">OUR PETS</button></a>
            <a href="/educational"><button class="nav-button">EDUCATIONAL</button></a>
            <a href="/faq"><button class="nav-button">FAQ</button></a>
        </nav>
        <a href="login"><button class="login-button">LOGIN</button></a>
    </header>

    <main class="admin-container">
        <h1 class="admin-title">Administrator Rights - Manage User Accounts</h1>
        <div class="user-grid">
            <% users.forEach(user => { %>
                <div class="user-card">
                    <h3><%= user.name %></h3>
                    <p>Username: <%= user.username %></p>
                    <p>Email: <%= user.email %></p>
                    <p>Role: <%= user.role %></p>
                    <p>Joined: <%= new Date(user.created_at).toLocaleDateString() %></p>
                    <form action="/admin/users/<%= user.id %>/edit" method="GET" style="margin-bottom: 5px;">
                        <button type="submit">Edit</button>
                    </form>
                    <form action="/admin/users/<%= user.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 PawsWeb. All rights reserved.</p>
    </footer>
</body>
</html>
