<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Management | PawsWeb</title>
    <link rel="stylesheet" href="/styles.css"> 
    <style>
        /* Basic styling for the cards and buttons */
        .pet-management {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-around;
            margin-top: 20px;
        }

        .pet-card {
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 300px;
            text-align: center;
        }

        .pet-card img {
            max-width: 100%;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .pet-card h3 {
            font-size: 1.5em;
            margin-bottom: 10px;
        }

        .pet-card p {
            margin-bottom: 10px;
            font-size: 1em;
            color: #555;
        }

        .pet-card button {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
        }

        .pet-card button:hover {
            background-color: #c0392b;
        }

        .add-new-pet {
            text-align: center;
            margin-top: 30px;
        }

        .add-new-pet button {
            background-color: #2ecc71;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1em;
            cursor: pointer;
            margin-bottom: 30px;
        }

        .add-new-pet button:hover {
            background-color: #27ae60;
        }
    </style>
</head>
<body>
    <header>
        <a href="/"><img src="/images/logo.png" alt="PawsWeb Logo" class="logo"></a>
        <nav class="nav-buttons">
            <a href="/"><button>HOME</button></a>
            <a href="/aboutus"><button>ABOUT US</button></a>
            <a href="/ourpets"><button>OUR PETS</button></a>
            <a href="/educational"><button>EDUCATIONAL</button></a>
            <a href="/faq"><button>FAQ</button></a>
        </nav>
        <a href="/logout"><button class="login-button">LOGOUT</button></a>
    </header>

    <hr class="line">

    <main>
        <h1>Pet Management</h1>

        <section class="add-new-pet">
            <h2>Add a New Pet</h2>
            <a href="/shelter/add-pet"><button>Add Pet</button></a>
        </section>

        <section class="pet-management">
            <% if (pets && pets.length > 0) { %>
                <% pets.forEach(pet => { %>
                    <div class="pet-card">
                        <img src="<%= pet.image_url %>" alt="Image of <%= pet.name %>">
                        <h3><%= pet.name %></h3>
                        <p><strong>Breed:</strong> <%= pet.breed %></p>
                        <p><strong>Size:</strong> <%= pet.size %></p>
                        <p><strong>Age:</strong> <%= pet.age %> years</p>
                        <p><strong>Gender:</strong> <%= pet.gender %></p>
                        <p><strong>Description:</strong> <%= pet.description %></p>
                        <form action="/shelter/delete-pet" method="POST" style="display:inline;">
                            <input type="hidden" name="petId" value="<%= pet.id %>">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this pet?');">Delete</button>
                        </form>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No pets found.</p>
            <% } %>
        </section>
    </main>

    <footer>
        <p>&copy; 2024 PawsWeb. All rights reserved.</p>
    </footer>
</body>
</html>
